{
	"manifest_version" : 2,
	"version": "1.0",
	
	"name" : "DramaTracker",
	"description" : "Track your favourite dramas!",
	"icons" : {
		"48" : "img/icon48.png"
	},

	"browser_action" : {
		"default_icon" : "img/icon48.png",
		"default_popup" : "popup.html"
	},

	"background" : {
		"page": "/background/background.html"
	},

	"permissions" : [
		"notifications",
		"alarms",
		"background",
		"https://*/",
		"http://*/"
	]
}